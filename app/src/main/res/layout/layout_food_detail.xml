<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_fd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:fitsSystemWindows="true"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/transparent">

            <ImageView
                android:id="@+id/iv_food_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax" />
            <!--<androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:layout_collapseMode="pin"
                app:titleTextColor="@color/colorWhite"
                app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium" />-->

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:clipToPadding="false"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_food_name"
                        android:layout_marginTop="8dp"
                        tools:text="Food Name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_bottom_line_gray"
                        android:layout_marginTop="@dimen/dimens_5dp">
                        <ImageView
                            android:id="@+id/iv_add_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_add_cart"
                            android:tint="@color/grey_40"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="@drawable/bg_icon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/iv_like"/>
                        <TextView
                            android:id="@+id/tv_add_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@id/iv_add_cart"
                            android:text="@string/txt_add_to_cart"
                            android:paddingHorizontal="5dp"
                            app:layout_constraintLeft_toLeftOf="@id/iv_add_cart"
                            app:layout_constraintRight_toRightOf="@id/iv_add_cart"/>

                        <ImageView
                            android:id="@+id/iv_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_favorite"
                            android:tint="@color/grey_40"
                            android:gravity="center"
                            android:background="@drawable/bg_icon"
                            android:padding="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"/>
                        <TextView
                            android:id="@+id/tv_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@+id/iv_like"
                            android:text="@string/txt_like"
                            app:layout_constraintLeft_toLeftOf="@id/iv_like"
                            app:layout_constraintRight_toRightOf="@id/iv_like"/>

                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_menu_share"
                            android:tint="@color/grey_40"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:background="@drawable/bg_icon"
                            android:padding="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/iv_like"/>
                        <TextView
                            android:id="@+id/tv_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/iv_share"
                            android:text="@string/txt_share"
                            android:layout_marginTop="5dp"
                            app:layout_constraintLeft_toLeftOf="@id/iv_share"
                            app:layout_constraintRight_toRightOf="@id/iv_share"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:layout_marginHorizontal="@dimen/dimen_16dp">
                <TextView
                    android:id="@+id/tv_food_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_money"
                    android:drawableTint="@color/grey_40"
                    android:drawablePadding="@dimen/dimens_5dp"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:text="1,000" />

                <!--<RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    style="@style/CustomRatingBar"
                    android:numStars="5"
                    android:stepSize="0.01"
                    android:isIndicator="true"
                    android:rating="3.75"
                    android:layout_centerVertical="true"
                    />-->

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ln_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:background="@drawable/bg_bottom_line_gray"
                android:layout_marginTop="@dimen/dimens_10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_check_circle"
                    android:drawablePadding="@dimen/dimens_5dp"
                    android:drawableTint="@color/grey_40"
                    android:text="Size"
                    android:textSize="17sp"/>
                <RadioGroup
                    android:id="@+id/rdi_group_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_addon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginHorizontal="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimens_10dp">
                <com.github.florent37.expansionpanel.ExpansionHeader
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:expansion_headerIndicator="@id/headerIndicator"
                    app:expansion_layout="@id/expansionLayout"
                    app:expansion_toggleOnClick="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:drawableLeft="@drawable/ic_check_circle"
                        android:drawableTint="@color/grey_40"
                        android:drawablePadding="@dimen/dimens_5dp"
                        android:text="Add On"/>
                    <ImageView
                        android:adjustViewBounds="true"
                        android:id="@+id/headerIndicator"
                        android:layout_gravity="center_vertical|right"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />
                </com.github.florent37.expansionpanel.ExpansionHeader>

                <com.github.florent37.expansionpanel.ExpansionLayout
                    android:id="@+id/expansionLayout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <!-- CONTENT -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_add_on"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.github.florent37.expansionpanel.ExpansionLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_food_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="16dp"
                android:lineSpacingMultiplier="1.5"
                tools:text="Description"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>