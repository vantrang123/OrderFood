<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/swr_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dimens_16"
    android:paddingRight="@dimen/dimens_16">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/layout_banner"
                layout="@layout/layout_banner"
                android:visibility="gone"
                tools:visibility="visible"/>

            <include
                android:id="@+id/layout_restaurant"
                layout="@layout/layout_restaurant"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:visibility="gone"
                tools:visibility="visible"/>

            <include
                android:id="@+id/layout_suggestion"
                layout="@layout/layout_suggestion"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:visibility="gone"
                tools:visibility="visible"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>