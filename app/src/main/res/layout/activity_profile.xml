<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.trangdv.orderfood.ui.BaseStatusBar
        android:id="@+id/base_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:background="@drawable/bg_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/base_status_bar"
        >

        <ImageView android:id="@+id/iv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/button_effect_oval"
            android:tint="@color/colorWhite"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView android:id="@+id/tvTitle"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_profile"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:paddingLeft="@dimen/dimen_16dp"
        tools:text="@string/app_name"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_header" />

    <TextView
        android:id="@+id/tv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_edit"
        android:textSize="13sp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:background="@drawable/button_effect_retangle"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_header" />

    <TextView
        android:id="@+id/tv_userPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/txt_suggestion"
        android:paddingLeft="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_userName"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/tv_user_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_userPhone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/txt_address_info"/>

    <TextView
        android:id="@+id/tv_user_address_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toBottomOf="@id/tv_userPhone"
        app:layout_constraintLeft_toRightOf="@id/tv_user_address"
        tools:text="@string/txt_address_info"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_20dp"
        android:paddingHorizontal="@dimen/dp_5"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_userPhone">
        <TextView
            android:id="@+id/tv_my_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_line_gray"
            android:text="@string/txt_my_order"
            android:drawableLeft="@drawable/ic_list"
            android:drawableTint="@color/grey_40"
            android:paddingVertical="@dimen/dimens_20dp"
            android:drawablePadding="@dimen/dimens_10dp"
            android:gravity="center_vertical"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_manage_addresses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_line_gray"
            android:text="@string/txt_manage_addresses"
            android:drawableLeft="@drawable/ic_manage_addresses"
            android:drawableTint="@color/grey_40"
            android:paddingVertical="@dimen/dimens_20dp"
            android:drawablePadding="@dimen/dimens_10dp"
            android:gravity="center_vertical"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_payments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_line_gray"
            android:text="@string/txt_payments"
            android:drawableLeft="@drawable/ic_payment"
            android:drawableTint="@color/grey_40"
            android:paddingVertical="@dimen/dimens_20dp"
            android:drawablePadding="@dimen/dimens_10dp"
            android:gravity="center_vertical"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_line_gray"
            android:text="@string/txt_help"
            android:drawableLeft="@drawable/ic_help"
            android:drawableTint="@color/grey_40"
            android:paddingVertical="@dimen/dimens_20dp"
            android:drawablePadding="@dimen/dimens_10dp"
            android:gravity="center_vertical"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_line_gray"
            android:text="@string/txt_logout"
            android:drawableLeft="@drawable/ic_logout"
            android:drawableTint="@color/grey_40"
            android:paddingVertical="@dimen/dimens_20dp"
            android:drawablePadding="@dimen/dimens_10dp"
            android:gravity="center_vertical"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>