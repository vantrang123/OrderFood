<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_food_item"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_increase"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_plus"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_circle_number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="300000"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_increase"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        />

    <ImageView
        android:id="@+id/iv_decrease"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_sub"
        android:tint="@color/colorAccent"
        android:background="@drawable/bg_circle_button"
        app:layout_constraintRight_toLeftOf="@id/tv_quantity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/dimens_10dp"
        />


    <TextView
        android:id="@+id/tv_food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:drawableLeft="@drawable/ic_money"
        android:drawableTint="@color/grey_40"
        android:gravity="center"
        tools:text="@string/app_name"
        android:textSize="@dimen/dimens_12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cv_food_image" />

    <TextView
        android:id="@+id/tv_food_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginRight="@dimen/dimens_30dp"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:textSize="@dimen/dimens_12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cv_food_image"
        app:layout_constraintStart_toEndOf="@id/cv_food_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="aaaddddaaaaaaaaaaaaaaasssssasdsadsadsddasdadasdsdasdasdasdasdasdas" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_food_image"
        android:layout_width="@dimen/dimens_90dp"
        android:layout_height="@dimen/dimens_90dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_food_image"
            android:layout_width="@dimen/dimens_90dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_default" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>