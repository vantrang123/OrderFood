<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container_cart_item"
    android:background="@drawable/bg_item"
    android:layout_marginTop="@dimen/dimens_5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/cart_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_margin="@dimen/dimens_5dp"
        android:text="Food 01"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/container_cart_item"
        app:layout_constraintTop_toTopOf="@id/container_cart_item"/>
    <TextView
        android:id="@+id/cart_item_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_margin="@dimen/dimens_5dp"
        android:text="100,1000"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@id/container_cart_item"
        app:layout_constraintTop_toBottomOf="@id/cart_item_name"/>
    <ImageView
        android:id="@+id/cart_item_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="@dimen/dimens_16"
        app:layout_constraintTop_toTopOf="@id/container_cart_item"
        app:layout_constraintRight_toRightOf="@id/container_cart_item"
        app:layout_constraintBottom_toBottomOf="@id/container_cart_item"/>
</androidx.constraintlayout.widget.ConstraintLayout>