<com.trangdv.orderfood.utils.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="@dimen/dimens_10dp"
    android:background="@drawable/bg_boder_selected"
    app:draggedItem="@id/drag_item"
    app:swipeDirection="left"
    app:isFreeDragAfterOpen="true"
    app:rightItem="@id/iv_delete">

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#ff5722"
        android:gravity="center"
        android:layout_marginBottom="-1dp"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:src="@drawable/ic_delete"/>

    <include layout="@layout/item_cart"
        android:id="@+id/drag_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingStart="20dp"/>

</com.trangdv.orderfood.utils.SwipeLayout>

